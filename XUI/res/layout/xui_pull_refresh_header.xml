<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/xui_white">

    <TextView
        android:id="@+id/txt_refresh_tip"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/xui_text_gray_8d"
        android:text="@string/xui_release_to_refresh" />

    <ProgressBar
        android:id="@+id/prb_refresh"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_toLeftOf="@id/txt_refresh_tip" />
    
    <ImageView 
        android:id="@+id/img_refresh"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="15dp"
        android:contentDescription="@string/xui_content_description"
        android:src="@drawable/xui_arrow_up_black"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/txt_refresh_tip"/>

</RelativeLayout>